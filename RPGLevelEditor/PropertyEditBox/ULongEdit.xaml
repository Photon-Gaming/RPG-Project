<local:PropertyEditBox x:TypeArguments="system:UInt64" x:Class="RPGLevelEditor.PropertyEditBox.ULongEdit"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                       xmlns:local="clr-namespace:RPGLevelEditor.PropertyEditBox"
                       xmlns:system="clr-namespace:System;assembly=System.Runtime"
                       mc:Ignorable="d" 
                       d:DesignWidth="400" d:Background="#F0F0F0">
    <Grid>
        <TextBlock x:Name="propertyName" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10" d:Text="Property Name (PropertyName):"/>
        <TextBox x:Name="propertyValue" VerticalAlignment="Center" Margin="290,10,10,10" MinWidth="100" TextChanged="propertyValue_TextChanged"/>
    </Grid>
</local:PropertyEditBox>
