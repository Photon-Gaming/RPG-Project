<local:PropertyEditBox x:TypeArguments="system:Object" x:Class="RPGLevelEditor.PropertyEditBox.ErrorEdit"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                       xmlns:local="clr-namespace:RPGLevelEditor.PropertyEditBox"
                       xmlns:system="clr-namespace:System;assembly=System.Runtime"
                       mc:Ignorable="d" 
                       d:DesignWidth="400" Background="#33FF0000">
    <Border BorderBrush="Red" BorderThickness="3">
        <TextBlock x:Name="errorLabel" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" Text="Error! Hover for details."/>
    </Border>
</local:PropertyEditBox>
