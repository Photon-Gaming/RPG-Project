<local:RoomCoordinatePropertyEditBox x:TypeArguments="xna:Vector2" x:Class="RPGLevelEditor.PropertyEditBox.RoomCoordinateEdit"
                                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                                     xmlns:local="clr-namespace:RPGLevelEditor.PropertyEditBox"
                                     xmlns:xna="clr-namespace:Microsoft.Xna.Framework;assembly=MonoGame.Framework"
                                     mc:Ignorable="d" 
                                     d:DesignWidth="400" d:Background="#F0F0F0">
    <Grid>
        <TextBlock x:Name="propertyName" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10" d:Text="Property Name (PropertyName):"/>
        <TextBox x:Name="propertyValueX" VerticalAlignment="Center" Margin="290,10,10,40" MinWidth="100" TextChanged="propertyValue_TextChanged"/>
        <TextBox x:Name="propertyValueY" VerticalAlignment="Center" Margin="290,40,10,10" MinWidth="100" TextChanged="propertyValue_TextChanged"/>
        <Label Content="X:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="270,10,10,40"/>
        <Label Content="Y:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="270,40,10,10"/>
        <Button Content="⌖" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="245,10,10,10" Width="20" Height="20" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16" FontFamily="Arial" Click="SelectButton_Click"/>
    </Grid>
</local:RoomCoordinatePropertyEditBox>
