<UserControl x:Class="RPGLevelEditor.PropertyEditBox.DeleteButtonContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RPGLevelEditor.PropertyEditBox"
             mc:Ignorable="d">
    <Grid x:Name="containerGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Margin="10,5" HorizontalAlignment="Right" VerticalAlignment="Center" Width="20" Height="20" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="14" Click="DeleteButton_Click">
            <Image Source="pack://application:,,,/Resources/MenuIcons/minus.png" Stretch="None"/>
        </Button>
    </Grid>
</UserControl>
