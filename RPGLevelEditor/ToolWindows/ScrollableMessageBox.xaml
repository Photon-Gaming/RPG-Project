<Window x:Class="RPGLevelEditor.ToolWindows.ScrollableMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPGLevelEditor.ToolWindows"
        mc:Ignorable="d"
        Title="ScrollableMessageBox" Height="250" Width="500">
    <Grid>
        <ScrollViewer Margin="10,10,10,40">
            <TextBlock x:Name="textBlock" Padding="5" Background="#F0F0F0"/>
        </ScrollViewer>
        <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="OK" Padding="20,1" Margin="10" Click="Button_Click"/>
    </Grid>
</Window>
