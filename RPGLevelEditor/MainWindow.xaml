<Window x:Class="RPGLevelEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPGLevelEditor"
        mc:Ignorable="d"
        Title="RPG Editor" Height="450" Width="800" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Padding="0,0,0,3">
            <MenuItem Header="_File">
                <MenuItem Header="Open _Room..." Click="OpenRoomItem_OnClick"/>
            </MenuItem>
            <MenuItem Header="_Config">
                <MenuItem Header="Set _Texture Path..." Click="TexturePathItem_OnClick"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
